extends layout

block content
  .container.mt-5
    .text-center
      h1.text-primary About Us
      p.lead Welcome to our URL Shortener! We make long links short and track their performance.

    .mt-4
      h2.text-secondary Our Mission
      p.text-muted Our goal is to simplify URL management while providing insights on link activity.

    hr.my-4

    .text-center
      h2.text-success Ready to Shorten Your Links?
      p Start now and make your long URLs short with just one click!
      a.btn.btn-lg.btn-success(href="/shorten") ðŸš€ Start Now

    hr.my-4

    .text-center
      h1.text-primary Contact Us
      p.text-muted Need help? Send us a message.

    .row.justify-content-center
      .col-md-6
        form(action="/contact" method="POST" class="p-4 border rounded shadow-sm")
          .mb-3
            label.form-label(for="name") Name
            input.form-control(type="text" id="name" name="name" placeholder="Enter your name" required)

          .mb-3
            label.form-label(for="email") Email
            input.form-control(type="email" id="email" name="email" placeholder="Enter your email" required)

          .mb-3
            label.form-label(for="message") Message
            textarea.form-control(id="message" name="message" rows="4" placeholder="Type your message..." required)
          
          .text-center
            button.btn.btn-primary.btn-lg(type="submit") Send Message

    
